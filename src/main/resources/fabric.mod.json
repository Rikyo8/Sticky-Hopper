{
  "schemaVersion": 1,
  "id": "stickyhopper",
  "version": "${version}",

  "name": "Sticky Hopper",
  "description": "Mod allowing hoppers to be sticky!",
  "authors": [
    "Cuicui"
  ],
  "contact": {
    "homepage": "https://dev.cuicui.ovh/minecraft",
    "sources": "https://dev.cuicui.ovh/minecraft/sticky-hopper"
  },

  "license": "CC0-1.0",
  "icon": "assets/stickyhopper/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "ovh.cuicui.stickyhopper.Main"
    ]
  },
  "mixins": [
    "stickyhopper.mixins.json"
  ],

  "custom": {
    "lithium:options": {
      "mixin.block.hopper": false
    }
  },

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  }
}
